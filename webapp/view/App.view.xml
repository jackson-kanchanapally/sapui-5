<mvc:View
   controllerName="ui5.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Button
      text="{i18n>showHelloButtonText}"
      press=".onShowHello"/>
   <Button
      text="Say Hi"
      press=".onShowHi"/>

    <Input
    value="{/recipient/name}"
    description="Hey Hi {/recipent/name}"
    valueLiveUpdate="true"
    width="60%"
    />
</mvc:View>